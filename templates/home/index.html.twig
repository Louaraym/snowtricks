{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-4 text-center">
    <div class="row">
        <div class="col">
            <div class="card">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="card-body" style="padding: inherit">
                <h1  class="h3 font-weight-normal">Bienvenue dans le monde du Snowboard !</h1>
                </div>
                <img class="trick-img" src="{{ '../uploads/la_une.jpg'  }}" style="width: 100%; height: auto" alt="Image de la figure">
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        {% for trick in tricks %}
            <div class="col-md-3">
                <div class="card mb-4">
                    <a href="{{ path( 'trick_show', {'slug': trick.slug,'id': trick.id} ) }}">
                        {% if trick.imageFilename %}
                            <img class="trick-img" src="{{ trick.imagePath | imagine_filter('small') }}" alt="Image de la figure" style="width: 100%; height: auto" title="Voir la figure">
                        {% else %}
                            <img class="trick-img" src="{{ '../uploads/empty.jpg' }}" style="width: 100%; height: auto" alt="Image de la figure" title="Voir la figure">
                        {% endif %}
                    </a>
                    <div class="card-body" style="padding: inherit">
                        <a href="{{ path( 'trick_show', {'slug': trick.slug, 'id': trick.id} ) }}" >{{trick.title}}</a> &nbsp
                        {% if app.user %}
                            <a href="{{ path('admin_trick_edit', {'id': trick.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                            <form method="post" action="{{ path('admin_trick_delete', {id: trick.id}) }}" style="display: inline-block"
                                  onsubmit="return confirm('Etes-vous sûr de bien vouloir supprimer cette figure ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                                <button class="btn btn-outline border-0" ><i class="far fa-trash-alt"></i></button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            <div>
                <p>Aucune figure retrouvée</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

