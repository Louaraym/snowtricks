<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue sur snowtricks !{% endblock %}</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" style="margin-left: 85px;" href="{{ path('trick_home') }}">Accueil</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {% if app.user.avatarFilename %}
                            <img class="nav-profile-img rounded-circle" src="{{ app.user.avatarPath | imagine_filter('avatar_thumbnail') }}" alt="Image de la figure" style="height: auto">
                        {% else %}
                            <img class="nav-profile-img rounded-circle" src="{{ '/uploads/avatar_profile.png'  }}" style="width: 90%; height: auto" alt="Image de la figure">
                        {% endif %}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="{{ path('account') }}">Profile</a>
                        <a class="dropdown-item" href="{{ path('admin_trick_new') }}">Ajouter une figure</a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="dropdown-item" href="{{ path('comment_admin') }}">GÃ©rer les commentaires</a>
                        {% endif %}
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                    </div>
                </li>
            {% else %}
                <li class="nav-item">
                    <a style="color: #fff;" class="nav-link" href="{{ path('app_login') }}">S'identifier</a>
                </li>
                <li class="nav-item" style="margin-right: 85px;">
                    <a style="color: #fff;" class="nav-link" href="{{ path('app_registration') }}">S'inscrire</a>
                </li>
            {% endif %}
        </ul>
        <ul class="navbar-nav" style="margin-right: 85px;">
            {% if is_granted('ROLE_USER') %}
                <li class=" nav-welcome " style="font-size: 1.5em; color: #DDDDDD; margin-left: 10px">
                    {{ app.user.username }}
                </li>
            {% endif %}
        </ul>
    </div>
</nav>

{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}

<div class="container">
    {% block body %}{% endblock %}
</div>

<footer class="footer">
    <div class="container text-center">
        <span class="text-muted">Fait avec  <i class="fa fa-heart" style="color: red;"></i> par Raymond LOUA</span>
    </div>
</footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>