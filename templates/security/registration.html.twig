{% extends 'base.html.twig' %}

{% block body %}
<div class="registration mt-4">
    <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
    {{ form_start(form) }}

    {{ form_row(form.username, { 'label': "Nom d'utilisateur", 'attr': { 'placeholder': "Votre nom d'utilisateur"} }) }}
    {{ form_row(form.email, { 'label': "Adresse email", 'attr': { 'placeholder': "votre adresse email"} }) }}
    {{ form_row(form.password, {'label': "Mot de passe", 'attr': { 'placeholder': "Votre mot de passe"} }) }}
    {{ form_row(form.confirm_password, {'label': "Confirmation mot de passe",
        'attr' : { 'placeholder': "Rep√©tez votre mot de passe"} }) }}

    <button class="btn btn-lg btn-primary" type="submit">M'inscrire </button>

    {{ form_end(form) }}
</div>
{% endblock %}


