{% extends 'base.html.twig' %}
{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}

{% block title %}Ajout nouvelle figure{% endblock %}

{% block body %}

    <h1>Ajouter une nouvelle figure</h1>

    {{ form_start(formTrick, {'attr' : {'novalidate': "novalidate"} }) }}

    {{ form_row(formTrick.title, {'label' : "Nom",'attr' : {'placeholder' : "Nom de la figure"}}) }}
    {{ form_row(formTrick.tricksGroup, {'label' : "Groupe"}) }}
    {{ form_row(formTrick.description, { 'attr' : {'placeholder' : "Description de la figure"}}) }}

    <ul class="images" data-prototype="{{ form_widget(formTrick.images.vars.prototype)|e('html_attr') }}">
        {% for image in formTrick.images %}
            <li>{{ form_row(image.url) }}</li>
        {% endfor %}
    </ul>

    <button type="submit" class="btn btn-success">Ajouter la figure</button>

    {{ form_end(formTrick) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('createTricks') }}
{% endblock %}



