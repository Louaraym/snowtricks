{{ form_start(formTrick, {'attr' : {'novalidate': "novalidate"} }) }}

    {{ form_row(formTrick.title, {'label' : "Nom",'attr' : {'placeholder' : "Nom de la figure"}}) }}
    {{ form_row(formTrick.tricksGroup, {'label' : "Groupe"}) }}
    {{ form_row(formTrick.description, { 'attr' : {'placeholder' : "Description de la figure"}}) }}

    <div class="row">
        <div class="col-sm-3">
            {{ form_row(formTrick.imageFile, {'label' : "Ajouter une image",
                'attr' : {'placeholder' : "Choisir une image"}}) }}
        </div>
        <div class="col-sm-3">
            {% if formTrick.vars.data.imageFilename |default %}
                <img src="{{ uploaded_asset(formTrick.vars.data.imagePath)|imagine_filter('small') }}" height="100">
            {% endif %}
        </div>
    </div>

<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>

{{ form_end(formTrick) }}