{% extends 'base.html.twig' %}

{% block body %}

    <h1>Bienvenue dans le monde du Snowboard !</h1>
    <section class="tricks">
        {% for trick in tricks %}
        <article>
            <h2>{{trick.title}}</h2>
            {{trick.description | raw}}
            <div class="metadata">Ajoutée le {{trick.createdAt | date('d/m/y')}} à {{trick.createdAt | date('H:i')}}
                </div>
                <a href="{{ path( 'trick_show', {'id': trick.id} ) }}" class="btn btn-primary">Voir la figure</a>

        </article>
        {% endfor %}
    </section>

{% endblock %}
